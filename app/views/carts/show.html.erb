<div id="text">
  <% if notice %>
      <p id="notice"><%= notice %></p>
  <% end %>
  <h2>Obsah kosiku</h2>
  <table>
    <thead>
    <tr>
      <td>Nazev zbozi</td>
      <td>Pocet</td>
    </tr>
    </thead>
    <tbody>
    <% @cart.cart_products.each do |item| %>
        <tr>
          <td>
            <%= item.product.name %>
            <%= item.quantity%>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <%= button_to 'Vyparzdnit kosik', @cart, method: :delete, data: {confirm: 'Chcete vyprazdnit kosik?'} %>
  <a <%= link_to 'Zpet', pages_index_path %>
</div>


